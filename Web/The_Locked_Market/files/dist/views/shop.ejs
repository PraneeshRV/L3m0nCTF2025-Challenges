<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHOP // SHADOWCORP</title>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=JetBrains+Mono:wght@400;700&family=Orbitron:wght@400;700&display=swap"
        rel="stylesheet">
    <style>
        :root {
            --bg: #050505;
            --panel: rgba(20, 20, 20, 0.8);
            --border: rgba(255, 255, 255, 0.1);
            --accent: #facc15;
            --accent-glow: rgba(250, 204, 21, 0.4);
            --text: #e5e5e5;
            --muted: #737373;
            --font-main: 'Inter', sans-serif;
            --font-display: 'Orbitron', sans-serif;
        }

        body {
            background: var(--bg);
            color: var(--text);
            font-family: var(--font-main);
            margin: 0;
            padding: 0;
        }

        .navbar {
            padding: 20px 40px;
            border-bottom: 1px solid var(--border);
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: var(--panel);
        }

        .brand {
            font-family: var(--font-display);
            font-size: 1.5rem;
            color: var(--accent);
            text-decoration: none;
            letter-spacing: 2px;
        }

        .nav-links a {
            color: var(--text);
            text-decoration: none;
            margin-left: 20px;
            font-size: 0.9rem;
        }

        .nav-links a:hover {
            color: var(--accent);
        }

        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
        }

        .card {
            background: var(--panel);
            border: 1px solid var(--border);
            padding: 30px;
            border-radius: 12px;
            transition: 0.3s;
        }

        .card:hover {
            border-color: var(--accent);
            transform: translateY(-5px);
        }

        .icon {
            font-size: 3rem;
            margin-bottom: 20px;
            display: block;
        }

        h3 {
            margin: 0 0 10px 0;
            font-family: var(--font-display);
        }

        .desc {
            color: var(--muted);
            font-size: 0.9rem;
            margin-bottom: 20px;
            height: 40px;
        }

        .price {
            font-size: 1.2rem;
            color: var(--accent);
            font-weight: bold;
            margin-bottom: 20px;
        }

        button {
            width: 100%;
            background: transparent;
            border: 1px solid var(--accent);
            color: var(--accent);
            padding: 10px;
            cursor: pointer;
            transition: 0.3s;
            font-family: var(--font-display);
        }

        button:hover {
            background: var(--accent);
            color: #000;
        }
    </style>
</head>

<body>

    <nav class="navbar">
        <a href="/" class="brand">SHADOWCORP</a>
        <div class="nav-links">
            <span>Balance: <%= currency(balance) %></span>
            <a href="/shop" style="color: var(--accent);">Shop</a>
            <a href="/checkout">Checkout</a>
            <a href="/logout">Logout</a>
        </div>
    </nav>

    <div class="container">
        <h1 style="font-family: var(--font-display); margin-bottom: 40px;">Available Equipment</h1>

        <div class="grid">
            <% for (const [key, item] of Object.entries(items)) { %>
                <div class="card">
                    <span class="icon">
                        <%= item.icon %>
                    </span>
                    <h3>
                        <%= item.name %>
                    </h3>
                    <div class="desc">
                        <%= item.desc %>
                    </div>
                    <div class="price">
                        <%= currency(item.price) %>
                    </div>
                    <button onclick="addToCart('<%= key %>')">ADD TO REQUISITION</button>
                </div>
                <% } %>
        </div>
    </div>

    <script>
        function addToCart(item) {
            fetch('/cart/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: 'item=' + item
            })
                .then(r => r.json())
                .then(d => {
                    if (d.status === 'success') window.location.href = '/checkout';
                    else alert(d.msg);
                });
        }
    </script>

    <div
        style="margin-top: 50px; text-align: center; color: var(--muted); font-size: 0.8rem; border-top: 1px solid var(--border); padding-top: 20px;">
        <a href="/doc_viewer?doc=corporate_policy.txt" style="color: var(--muted); text-decoration: none;">[ VIEW
            CORPORATE POLICY ]</a>
    </div>

</body>

</html>